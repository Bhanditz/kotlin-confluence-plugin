<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="Kotlin" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <macro name="jet" class="org.jetbrains.jet.lexer.JetMacro" key="jet">
      <description>Highlighting for Kotlin language</description>
    </macro>
    <macro name="kotlin" class="org.jetbrains.jet.lexer.JetMacro" key="kotlin">
      <description>Highlighting for Kotlin language</description>
    </macro>
<!--
    <macro name="jet-html" class="org.jetbrains.jet.lexer.JetHTMLMacro" key="jet-html">
      <description>Plain HTML</description>
    </macro>
-->
    <web-resource key="resources">
            <resource type="download" name="kotlin.css" location="kotlin.css"/>
            <resource type="download" name="underline.gif" location="underline.gif"/>
    </web-resource>
</atlassian-plugin>
